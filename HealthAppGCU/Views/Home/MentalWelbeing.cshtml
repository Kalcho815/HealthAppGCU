@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@{ ViewBag.Title = "Mental Welbeing"; }


<!--static page contans links to help lines and forms that help with mental health-->

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead"></p>
    <img src="/Images/mental-health.jpg" alt="Mental Welbeing" width="300" height="250" />

</div>
<div class="row">
    <div class="col-md-3">
        <h2>Mental health</h2>
        <p>Find information about mental health below</p>
        <p><a class="btn btn-outline-dark" href="https://www.mind.org.uk/">Click here &raquo;</a></p>
    </div>
</div>
<h3>If you're in crisis and need to speak to someone:</h3>
<div class="row">
    <div class="col-md-3">
        <h2>Helpline</h2>
        <p>If you need immediate help: <br /> In an emergency:</p>
        <ul>
            <li>Call 999</li>
            <li>Go to your local A&E department</li>
        </ul>
        <p><a class="btn btn-outline-dark" href="https://www.centreformentalhealth.org.uk/helplines-and-crisis-contacts" target="_blank">click here &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <ul>
            <li>Call NHS 111 (for when you need help but are not in immediate danger)</li>
            <li> Contact your GP and ask for an emergency appointment</li>
            <li>Contact the Samaritans</li>
            <li>Use the 'Shout' crisis text line; text <strong>SHOUT</strong>  to <strong>85258</strong></li>
        </ul>
    </div>
</div>
<h3>Charites that you can donate towards</h3>
<div class="row">
    <div class="col-md-3">
        <h3>Rainbow Trust</h3>
        <p>Rainbow Trust Children's Charity provides emotional and practical support to families who have a child with a life-threatening or terminal illness.</p>
        <p> <a class="btn btn-outline-dark" href="https://www.rainbowtrust.org.uk/" target="_blank">click here &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h3>Turn 2 Me</h3>
        <p>We take a stepped care approach to mental health support.</p>
        <p> <a class="btn btn-outline-dark" href="https://turn2me.ie/" target="_blank">click here &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h3>Snow Camp</h3>
        <p>We work directly with youth projects and youth service providers only. This is to ensure that we are working with those who are most in need of our support.</p>
        <p> <a class="btn btn-outline-dark" href="https://www.snow-camp.org.uk/" target="_blank">click here &raquo;</a></p>
    </div>

</div> 